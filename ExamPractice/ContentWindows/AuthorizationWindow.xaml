<Window x:Class="ExamPractice.ContentWindows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamPractice.ContentWindows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Background="LightGray" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Авторизация" HorizontalAlignment="Center"/>
            <Label Content="Логин:"/>
            <TextBox Margin="5" x:Name="LoginField"/>
            <Label Content="Пароль:"/>
            <PasswordBox Margin="5" x:Name="PasswordField"/>
            <Button Margin="5" Content="вход" Click="AuthorizationRequest"/>
        </StackPanel>
    </Grid>
</Window>
